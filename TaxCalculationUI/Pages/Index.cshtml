@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Tax Calculator</h2>
<div class="row">
<form method="post">
    <div class="form-group">
        <label for="postalCode">Postal Code:</label>
        @* <input type="text" asp-for="postalCode" name="postalCode" required /> *@
        <select asp-for="postalCode" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["Codes"]"></select>
    </div>
   
    <div class="form-group">
    <label for="annualIncome">Annual Income:</label>
    <input type="text" asp-for="annualAmount"  required />
    </div>
    <button type="submit">Calculate Tax</button>
</form>

</div>

@if (ViewData["TaxAmount"] != null)
{
    <p>Calculated Tax: @ViewData["TaxAmount"]</p>
}
